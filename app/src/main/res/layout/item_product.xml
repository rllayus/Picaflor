<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <!-- Image circular de la librerÃ­a externa -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_logo"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- Nombre de la chica -->
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_item_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca Cola"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hasdadandkadpadasndalkdnakpdnadkasdnasdlkanskdnaskdas;dmakdmkadasdasbdauosdasdkadaksdjad"
                android:textAppearance="?attr/textAppearanceListItemSmall"
                android:lines="3" />
            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4$"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
